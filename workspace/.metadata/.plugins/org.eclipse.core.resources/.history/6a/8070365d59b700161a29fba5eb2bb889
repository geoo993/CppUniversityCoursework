int main(int argc, char *argv[]) {

	sample a_sample;
	//samplet<long double> a_sample;
	samplet<double> a_sample1;
	samplet<float> a_sample2;
	samplet<int> a_sample3;

	 std::vector<int> myvector;

	 //myvector.resize(8);

	  std::cout << "size: " << (int) myvector.size() << '\n';
	  std::cout << "capacity: " << (int) myvector.capacity() << '\n';
	  std::cout << "max_size: " << (int) myvector.max_size() << '\n';


	//<6: 7 11 2 13 3 5 >
	string special_str = "<2: 1.18973e+4932 1.18973e+4932 >";
	string outputFile = "cwk-input01.txt";

	     fstream outFile;
	     outFile.open(outputFile, ios::out);

	     if (outFile.is_open()) {

	    	 while (cin >> a_sample){

	    	 	 a_sample.test(a_sample,outFile,outputFile);

	    	 	 a_sample.compute_set_sample(special_str, a_sample);
	    	 	 a_sample.test(a_sample,outFile,outputFile);
	    	 }
	    	 if (cin.bad())
	             cerr << "\nBad input\n\n";

	         outFile.close();

	     } else { cerr << "Could not create file " << outputFile << endl; }





	return 0;
}
